<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<PackageIcon>bee.png</PackageIcon>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Version>3.0.5</Version>
		<Authors>Bee.NET</Authors>
		<Product>Bee.NET</Product>
		<Description>Provides cross-platform shared API support functionalities, including API model definitions, encryption/decryption, serialization utilities, and other common logic components.</Description>
		<Copyright>© Bee.NET. All rights reserved.</Copyright>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>netstandard2.0</PackageTags>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<Folder Include="Common\" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\bee.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Bee.Base\Bee.Base.csproj" />
		<ProjectReference Include="..\Bee.Define\Bee.Define.csproj" />
	</ItemGroup>

</Project>
