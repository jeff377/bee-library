<?xml version="1.0" encoding="utf-8"?>
<FormDefine xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" ProgId="Employee" DisplayName="員工" ListFields="">
  <Tables>
    <FormTable TableName="Employee" DbTableName="ft_employee" DisplayName="員工">
      <Fields>
        <FormField FieldName="sys_no" Caption="流水號" DbType="AutoIncrement" />
        <FormField FieldName="sys_rowid" Caption="唯一識別" DbType="Guid" />
        <FormField FieldName="sys_id" Caption="員工編號" DbType="String" />
        <FormField FieldName="sys_name" Caption="員工姓名" DbType="String" />
        <FormField FieldName="dept_rowid" Caption="部門唯一識別" DbType="Guid" RelationProgId="Department">
          <RelationFieldMappings>
            <FieldMapping SourceField="sys_name" DestinationField="ref_dept_name" />
            <FieldMapping SourceField="manager_id" DestinationField="ref_supervisor_id" />
            <FieldMapping SourceField="ref_manager_name" DestinationField="ref_supervisor_name" />
          </RelationFieldMappings>
        </FormField>
        <FormField FieldName="ref_dept_name" Caption="部門名稱" DbType="String" Type="RelationField" />
        <FormField FieldName="ref_supervisor_id" Caption="直屬主管編號" DbType="String" Type="RelationField" />
        <FormField FieldName="ref_supervisor_name" Caption="直屬主管名稱" DbType="String" Type="RelationField" />
      </Fields>
    </FormTable>
  </Tables>
</FormDefine>